@page "/foods/delete"
@using Microsoft.EntityFrameworkCore
@using FitnessTracker.Models
@inject IDbContextFactory<FitnessTracker.Models.FitnessTrackerContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Food</h2>
    <hr />
    @if (food is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">FoodName</dt>
            <dd class="col-sm-10">@food.FoodName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">FoodGroup</dt>
            <dd class="col-sm-10">@food.FoodGroup</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">FoodSubGroup</dt>
            <dd class="col-sm-10">@food.FoodSubGroup</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Notes</dt>
            <dd class="col-sm-10">@food.Notes</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Amount</dt>
            <dd class="col-sm-10">@food.Amount</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Calories</dt>
            <dd class="col-sm-10">@food.Calories</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Protein</dt>
            <dd class="col-sm-10">@food.Protein</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Fat</dt>
            <dd class="col-sm-10">@food.Fat</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Carbohydrates</dt>
            <dd class="col-sm-10">@food.Carbohydrates</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Fiber</dt>
            <dd class="col-sm-10">@food.Fiber</dd>
        </dl>
        <EditForm method="post" Model="food" OnValidSubmit="DeleteFood" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(food is null)">Delete</button> |
            <a href="/foods">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Food? food;

    [SupplyParameterFromQuery]
    private int FoodId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        food = await context.Foods.FirstOrDefaultAsync(m => m.FoodId == FoodId);

        if (food is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteFood()
    {
        using var context = DbFactory.CreateDbContext();
        context.Foods.Remove(food!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/foods");
    }
}
